<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FbClassList"
    android:background="@drawable/bgcolor">


    <ListView
        android:id="@+id/FbGroupListView"
        android:layout_width="wrap_content"
        android:layout_height="402dp"
        android:layout_below="@+id/FbBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/edittext_design" />

    <Button
        android:id="@+id/FbBtn"
        android:layout_width="341dp"
        android:layout_height="57dp"
        android:layout_below="@+id/FbSectionSpinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:text="View FB Groups" />

    <Spinner
        android:background="@drawable/spinnergb"
        android:id="@+id/FbSectionSpinner"
        android:layout_width="323dp"
        android:layout_height="46dp"
        android:layout_below="@+id/FbYearSpinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp" />

    <Spinner
        android:background="@drawable/spinnergb"
        android:id="@+id/FbYearSpinner"
        android:layout_width="323dp"
        android:layout_height="46dp"
        android:layout_below="@+id/FbLearningSpinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="47dp"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp" />

    <Spinner
        android:id="@+id/FbLearningSpinner"
        android:layout_width="330dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:background="@drawable/spinnergb" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/textView52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learning System" />

    <TextView
        android:layout_marginTop="99dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/textView53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year" />

    <TextView
        android:layout_marginTop="190dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/textView54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Section" />

</RelativeLayout>